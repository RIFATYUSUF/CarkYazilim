@using Entities.Concrete
@model Portfolio

@{
    ViewData["Title"] = "Yeni Portfolio Ekle";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content-form">
    <h2 style="color: var(--primary-color, #00ffff); margin-bottom: 20px;">
        Yeni Portfolio Ekle
    </h2>

    <form method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label>Başlık (Title)</label>
            <input type="text" name="Title" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Açıklama (Description)</label>
            <textarea name="Description" class="form-control" rows="3" required></textarea>
        </div>

        <div class="form-group">
            <label>Görsel Yükle</label>
            <input type="file" name="ImageFile" accept="image/*" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Aktif Mi?</label>
            <input type="checkbox" name="IsActive" value="true" />
        </div>

        <button type="submit" class="btn btn-success">
            Kaydet
        </button>

        <a href="/Portfolio/PortfolioList" class="btn btn-secondary">
            Geri Dön
        </a>

    </form>
</div>
