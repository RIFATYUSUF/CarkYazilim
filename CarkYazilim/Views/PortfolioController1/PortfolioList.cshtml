@using Entities.Concrete
@model List<Portfolio>

@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content-form">

    @foreach (var item in Model)
    {
        <div class="item-card">
            <div class="item-info">

                <h4>@item.Title</h4>
                <p>@item.Description</p>

                <!-- Küçük görüntü (istersen kaldırabiliriz) -->
                @if (!string.IsNullOrEmpty(item.ImageUrl1))
                {
                    <img src="@item.ImageUrl1"
                         alt="@item.Title"
                         style="width: 80px; height: 60px; object-fit: cover; border-radius: 5px; margin-top:8px;" />
                }

            </div>

            <div class="item-actions">
                <a href="/PortfolioController1/EditPortfolio/@item.PortfolioId" class="btn btn-primary btn-small">Düzenle</a>
                <a href="/PortfolioController1/DeletePortfolio/@item.PortfolioId" class="btn btn-danger btn-small">Sil</a>
            </div>
        </div>
    }

    <a href="/PortfolioController1/CreatePortfolio" class="btn btn-success add-item-btn">
        Yeni Portfolio Ekle
    </a>

</div>
