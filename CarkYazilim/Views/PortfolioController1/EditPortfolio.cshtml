@using Entities.Concrete
@model Portfolio

@{
    ViewData["Title"] = "Portfolio Güncelle";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content-form">
    <h2 style="color: var(--primary-color, #00ffff); margin-bottom: 20px;">
        Portfolio Güncelle
    </h2>

    <form method="post" enctype="multipart/form-data">

        <input type="hidden" name="PortfolioId" value="@Model.PortfolioId" />

        <div class="form-group">
            <label>Başlık</label>
            <input type="text" name="Title" value="@Model.Title" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Açıklama</label>
            <textarea name="Description" class="form-control" rows="3" required>@Model.Description</textarea>
        </div>

        <div class="form-group">
            <label>Mevcut Resim</label><br />
            <img src="@Model.ImageUrl1" style="width:120px; border-radius:5px; margin-bottom:8px;" />
        </div>

        <div class="form-group">
            <label>Yeni Resim Yükle (opsiyonel)</label>
            <input type="file" name="ImageFile" accept="image/*" class="form-control" />
        </div>

        <div class="form-group">
            <label>Aktif Mi?</label>
            <input type="checkbox" name="IsActive" value="true" @(Model.IsActive ? "checked" : "") />
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
        <a href="/PortfolioController1/PortfolioList" class="btn btn-secondary">Geri Dön</a>

    </form>
</div>
