@using Entities.Concrete
@model Header

@{
    ViewData["Title"] = "UpdateHeader";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content-form">
    <h2 style="color:var(--primary-color); margin-bottom:20px;">Header Düzenle</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <form method="post" action="/Header/UpdateHeader">

        <input type="hidden" name="HeaderId" value="@Model.HeaderId" />

        <div class="form-group">
            <label>Başlık (Title)</label>
            <input type="text" name="Title" class="form-control" value="@Model.Title" required />
        </div>

        <div class="form-group">
            <label>Açıklama (Description)</label>
            <textarea name="Description" class="form-control" required>@Model.Description</textarea>
        </div>

        <button class="btn btn-success" type="submit">
            <i class="fas fa-save"></i> Kaydet
        </button>

        <a href="/Header/HeaderList" class="btn btn-secondary">Geri Dön</a>

    </form>
</div>
