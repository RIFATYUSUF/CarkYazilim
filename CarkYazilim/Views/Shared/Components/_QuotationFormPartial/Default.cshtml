<div id="teklifModal" class="modal">
    <div class="modal-content">

        <div class="modal-header">
            <h2>Teklif Formu</h2>
            <button class="modal-close" id="modalClose">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <form method="post" action="/Quotation/Send" id="teklifForm" class="teklif-form">

            <div class="form-row">
                <div class="form-group">
                    <label>Ad Soyad</label>
                    <input type="text" name="Name" id="teklifName" required>
                </div>

                <div class="form-group">
                    <label>E-posta</label>
                    <input type="email" name="EMail" id="teklifEmail" required>
                </div>
            </div>

            <div class="form-group">
                <label>Telefon</label>
                <input type="tel" name="Telephone" id="teklifPhone" placeholder="05XX XXX XX XX">
            </div>

            <div class="form-group">
                <label>Proje Detayları</label>
                <textarea id="teklifMessage" name="Description" required></textarea>
            </div>

            <div class="form-group checkbox-group">
                <label class="checkbox-label">
                    <input type="checkbox" id="teklifKVKK" name="KvkkOnay" value="true" required>
                    <span>KVKK onaylıyorum.</span>
                </label>
            </div>

            <button type="submit" class="submit-btn">
                Gönder Gelsin
            </button>

        </form>

    </div>
</div>
