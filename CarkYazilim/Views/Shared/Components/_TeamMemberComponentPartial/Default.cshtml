@using Entities.Concrete
@model List<TeamMember>
<section class="team scroll-animation" id="ekip">
    <div class="section-title">
        <h2>Ekibimiz</h2>
        <p>Teknoloji alanında uzman, yaratıcı ve tutkulu ekibimizle her projeye değer katıyoruz. Birlikte hayal ettiğiniz projeleri gerçeğe dönüştürüyoruz.</p>
    </div>
    <div class="team-grid">
        @foreach (var item in Model)
        {
            <article class="team-member">
                <div class="team-avatar" aria-hidden="true">@item.Initials</div>
                <h3>@item.Name @item.Surname</h3>
                <p class="team-role">@item.Role</p>
                <p>@item.Description</p>
                <div class="team-social">
                    <a href="#" class="social-link" aria-label="Ahmet Kaya LinkedIn profili"><i class="fab fa-linkedin" aria-hidden="true"></i></a>
                    <a href="#" class="social-link" aria-label="Ahmet Kaya Twitter profili"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                    <a href="#" class="social-link" aria-label="Ahmet Kaya GitHub profili"><i class="fab fa-github" aria-hidden="true"></i></a>
                </div>
            </article>
        }
        
    </div>
</section>