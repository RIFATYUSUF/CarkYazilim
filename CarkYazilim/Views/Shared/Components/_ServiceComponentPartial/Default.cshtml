@using Entities.Concrete
@model List<Services>
<section class="services scroll-animation" id="hizmetler">
    <div class="section-title">
        <h2>Hizmetlerimiz</h2>
        <p>Teknolojinin gücünü kullanarak işletmenizi geleceğe taşıyoruz. Her projeye özel çözümler ve yenilikçi yaklaşımlarla fark yaratıyoruz.</p>
    </div>
    <div class="services-grid">
        @foreach (var item in Model)
        {
            <article class="service-card">
                <div class="service-icon" aria-hidden="true">
                    <i class="@item.Icon"></i>
                </div>
                <h3>@item.ServiceTitle</h3>
                <p>@item.ServiceDescription</p>
                <a href="#" class="learn-more" aria-label="Oyun geliştirme hizmetleri detayları">Detaylar <i class="fas fa-arrow-right" aria-hidden="true"></i></a>
            </article>
        }
        
    </div>
</section>