@using Entities.Concrete
@model List<Contact>

<div class="teklif-list" id="mesajlarSection" style="display:none;">

    @foreach (var msg in Model)
    {
        <div class="teklif-item">
            <div class="teklif-header">
                <h3>@msg.NameSurname</h3>
                <div class="teklif-date">
                    <i class="fas fa-clock"></i> @msg.SendDate
                </div>
            </div>

            <div class="teklif-info">
                <div class="info-item">
                    <i class="fas fa-envelope"></i> @msg.EMail
                </div>
            </div>

            <div class="teklif-message">
                <p>@msg.Message</p>
            </div>

            <div class="message-actions">
                <a href="/Admin/DeleteContact/@msg.ContactId"
                   class="btn btn-danger btn-sm"
                   onclick="return confirm('Bu mesajı silmek istiyor musun?')">
                    <i class="fas fa-trash"></i> Sil
                </a>
            </div>
        </div>
    }

</div>
