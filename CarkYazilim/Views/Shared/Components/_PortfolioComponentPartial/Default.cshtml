@using Entities.Concrete
@model List<Portfolio>
<section class="portfolio scroll-animation" id="portfoy">
    <div class="section-title">
        <h2>Portföyümüz</h2>
        <p>Başarıyla tamamladığımız projeler ve müşterilerimizin hikayelerini keşfedin. Her proje bizim için bir başarı hikayesidir.</p>
    </div>
    <div class="portfolio-grid">
        @foreach (var item in Model)
        {
            <article class="portfolio-item">
                <img src="@item.ImageUrl1" alt="CyberRace 2077 - Futuristik yarış oyunu projesi" class="portfolio-image" loading="lazy">
                <div class="portfolio-overlay">
                    <h3>@item.Title</h3>
                    <p>@item.Description</p>
                </div>
            </article>
        }
        

    </div>
</section>