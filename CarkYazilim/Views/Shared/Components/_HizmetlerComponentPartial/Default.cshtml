@using Entities.Concrete
@model List<Hizmetler>

<section class="services" id="hizmetler">
    <div class="section-title">
        <h2>Hizmetlerimiz</h2>
        <p>Teknolojinin gücünü kullanarak işletmenizi geleceğe taşıyoruz. Her projeye özel çözümler ve yenilikçi yaklaşımlarla fark yaratıyoruz.</p>
    </div>

    <div class="services-grid">
        @foreach (var item in Model)
        {
            <article class="service-card">
                <div class="service-icon" aria-hidden="true">
                    <i class="@item.Icon"></i>
                </div>

                <h3>@item.Title</h3>
                <p>@item.Description</p>

                <a href="@item.Link"
                   class="learn-more"
                   aria-label="@item.Title hizmeti detayları">
                    Detaylar <i class="fas fa-arrow-right" aria-hidden="true"></i>
                </a>
            </article>
        }
    </div>
</section>
